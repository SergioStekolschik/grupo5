<%- include('../partials/header_admin') %>
    <main id="admin" class="container">
        <section class="admin__search">
            <iconify-icon class="admin__icon" icon="charm:search"></iconify-icon>
            <input class="admin__search-bar" type="text" name="search" id="search"
                placeholder="c&oacute;digo, nombre o categor&iacute;a">
        </section>
        <section class="admin__list">
            <div class="admin__header">
                <h2>LISTADO DE PRODUCTOS</h2>
                <span>AGREGAR<a href="/admin/create"><iconify-icon icon="bxs:plus-square"
                    style="color: #f33;"></iconify-icon></a>
                </span>
            </div>
            <div class="admin-table">
                <header class="admin-table__header">
                    <h3>ID</h3>
                    <h3>C&oacute;digo</h3>
                    <h3>Nombre del Producto</h3>
                    <h3>Categor&iacute;a</h3>
                </header>
                <% items.forEach(item => { %>
                    <article class="admin-table__row">
                        <p><%= item.product_id %></p>
                        <p><%= item.sku %></p>
                        <p><%= item.product_name %></p>
                        <p><%= item.category_name %></p>
                        <a href="./edit/<%= item.product_id %>"><iconify-icon icon="mdi:pencil" class="iconify-icon-pencil"></iconify-icon></a>
                        <form action="/admin/delete/<%= item.product_id %>?_method=DELETE" method="POST">
                            <button class="admin-table__btn-delete" type="submit">
                                <iconify-icon icon="heroicons-solid:trash" class="iconify-icon-trash"></iconify-icon>
                            </button>
                        </form>
                    </article>
                <% }); %>
            </div>
        </section>
    </main>
<%- include('../partials/footer_admin') %>